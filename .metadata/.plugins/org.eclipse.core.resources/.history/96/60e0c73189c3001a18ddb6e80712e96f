package test;

import java.util.Arrays;

public class Test {

	public static void main(String[] args) {
		String a = "blabla";
		String b = "blblaz";
		char[] countA = new char[a.length()];
    	char[] countB = new char[b.length()];
    	for(int i = 0; i < countA.length; i++) {
    		countA[i] = a.charAt(i);
    	}
    	for(int i = 0; i < countB.length; i++) {
    		countB[i] = b.charAt(i);
    	}
    	Arrays.sort(countA);
    	Arrays.sort(countB);
    	System.out.println("A");
    	for(int i = 0; i < countA.length; i++) {
    		System.out.print(countA[i]+" ");
    	}
    	System.out.println();
    	System.out.println("B");
    	for(int i = 0; i < countB.length; i++) {
    		System.out.print(countB[i]+" ");
    	}
	}

}


